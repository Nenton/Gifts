<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <objectAnimator
        android:duration="100"
        android:propertyName="rotationY"
        android:valueTo="2f"
        android:valueType="floatType"/>

    <objectAnimator
        android:duration="100"
        android:propertyName="rotationY"
        android:valueTo="-2f"
        android:valueType="floatType"/>
    <objectAnimator
        android:duration="100"
        android:propertyName="rotationY"
        android:valueTo="0f"
        android:valueType="floatType"/>
</set>