<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_album"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nenton.photon.ui.custom_views.ImageViewSquare
        android:id="@+id/add_photocard_select_album__IV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:orientation="vertical">
        <TextView
            android:id="@+id/add_album_name_TV"
            style="@style/TextNameAlbum"
            tools:text="Альбом"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@string/roboto_light"
            android:layout_marginBottom="4dp"
            android:text="Карты"/>

        <TextView
            android:id="@+id/add_album_count_TV"
            style="@style/TextNameAlbum"
            tools:text="3"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/check_album_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stroke_tags"
        android:button="@null"/>

</FrameLayout>