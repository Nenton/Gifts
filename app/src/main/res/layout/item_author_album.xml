<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.nenton.photon.ui.custom_views.ImageViewSquare
        android:id="@+id/album_author_item_IV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/colorAccent"/>

    <!--<ImageView-->
        <!--android:layout_width="24dp"-->
        <!--android:layout_height="24dp"-->
        <!--android:layout_gravity="bottom"-->
        <!--android:src="@drawable/ic_share_24dp"-->
        <!--android:layout_marginBottom="@dimen/spacing_normal_16"-->
        <!--android:layout_marginLeft="@dimen/spacing_normal_16"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_normal_16"
        android:layout_marginTop="@dimen/spacing_normal_16"
        android:orientation="vertical">

        <TextView
            android:id="@+id/album_author_name_TV"
            style="@style/TextNameAlbum"
            tools:text="Альбом"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:fontFamily="@string/roboto_light"
            android:text="Карты"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/album_author_count_TV"
            style="@style/TextNameAlbum"
            tools:text="3"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/counts_author_wrap"
        style="@style/TextIconItemWrap">

        <ImageView
            style="@style/IconItem"
            android:src="@drawable/ic_custom_favorites_white_24dp"/>

        <TextView
            android:id="@+id/fav_photo_TV"
            style="@style/TextIconItem"
            tools:text="57"/>

        <ImageView
            style="@style/IconItem"
            android:src="@drawable/ic_custom_views_white_24dp"/>

        <TextView
            android:id="@+id/sea_photo_TV"
            style="@style/TextIconItem"
            tools:text="71"/>
    </LinearLayout>


</FrameLayout>