<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingTop="@dimen/spacing_normal_16">

    <EditText
        android:id="@+id/add_album_name_ET"
        style="@style/Field"
        android:hint="Имя"/>

    <EditText
        android:id="@+id/add_album_description_ET"
        style="@style/Field"
        android:minLines="3"
        android:gravity="top"
        android:hint="Описание"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_album_ok_btn"
            style="?attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ок"/>

        <Button
            android:id="@+id/add_album_cancel_btn"
            style="?borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="отмена"/>
    </LinearLayout>

</LinearLayout>